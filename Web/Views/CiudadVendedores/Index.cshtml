        integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
        crossorigin="anonymous"></script>

@Scripts.Render("~/bundles/bootstrap")

<script src="~/Scripts/propios/CiudadesVendedor.js"></script>

<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>


<script type="text/javascript">

    var URLListarVendedor = '@Url.Action("_ListarVendedores", "CiudadVendedores")'
    var URLAgregarVendedor = '@Url.Action("_AgregarVendedor", "CiudadVendedores")'
    var URLEliminarVendedor = '@Url.Action("_EliminarVendedor", "CiudadVendedores")'

    var URLAgregar = '@Url.Action("_Agregar", "CiudadVendedores")'
    var URLEliminar ='@Url.Action("_EliminarCiudad", "CiudadVendedores")'
    var URLListar='@Url.Action("_Lista", "CiudadVendedores")'

    var URLAgregarCiudad='@Url.Action("agregarnuevaciudad", "CiudadVendedores")'


var my_func = function (event) {
    event.preventDefault();
};


    function agregarciudad() {
        this.addEventListener("submit", my_func, true);
        debugger;
        $.ajax({
            cache: false,
            async: true,
            type: "GET",
            url: URLAgregarCiudad,
            //data: {},
        success: function (response) {

            $('#modal-agregar').modal('show');
            $('#div-agregar').html('');
            $('#div-agregar').html(response);
           // ListarVendedores($('#').val());
        }
    });
    }

</script>

