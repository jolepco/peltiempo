@model IEnumerable<Web.Datos.Modelos.CiudadModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-border panel-primary">
            <div class="panel-heading">
                <button id="agregar" type="button" onclick="agregarciudad()" class="btn btn-primary waves-effect waves-light" data-toggle="modal"
                        data-target="#modal-agregar">
                    <i class="fa fa-plus"></i> Agregar
                </button>
            </div>
            <div class="panel-body table-rep-plugin">
                <div class="table-responsive" data-pattern="priority-columns">
                    <div id="listardatos">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="modal-agregar" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none">
    <div id="div-agregar">

    </div>
</div>


<div id="modalagregar" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none">
    <div id="divagregar">
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js"
